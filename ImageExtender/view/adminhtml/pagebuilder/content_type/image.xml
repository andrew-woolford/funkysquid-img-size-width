<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <!-- See Magento/PageBuilder/view/adminhtml/pagebuilder/content_type/image.xml -->
    <!-- Add or change styles, attributes, elements, and appearances as needed. -->
    <!-- Be sure to remove any appearances, elements, and template references you are not overriding. -->
    <type name="image">
        <appearances>
            <appearance
                        name="full-width"
                        preview_template="Magento_PageBuilder/content-type/image/full-width/preview"
                        master_template="Magento_PageBuilder/content-type/image/full-width/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <elements>
                    <element name="desktop_image">
                        <attribute name="desktop_loading" source="loading"/>
                        <attribute name="desktop_width" source="width"/>
                        <attribute name="desktop_height" source="height"/>
                    </element>
                    <element name="mobile_image">
                        <attribute name="mobile_loading" source="loading"/>
                        <attribute name="mobile_width" source="width"/>
                        <attribute name="mobile_height" source="height"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
